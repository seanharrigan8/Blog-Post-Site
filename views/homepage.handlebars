<style>
    .btn-primary,
    .btn-secondary {
        display: block;
        width: 200px;
        height: 50px;
        line-height: 50px;
        text-align: center;
        margin: 0 auto;
        margin-top: 20px;
        font-size: 18px;
        font-weight: bold;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

<h1> {
        font-size: 40px;
        margin-top: 0;
        text-align: center;
        ;
    }
    .btn-secondary {
        background-color: #6c757d;
    }

    .btn-primary:hover,
    .btn-secondary:hover {
        background-color: #0056b3;
    }

    .signup-message {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin-top: 20px;

    }
</style>


<h1>Welcome to the Blog</h1>

<a href="/login" class="btn-primary" id="loginbtn">Login</a>
<a href="/signup" class="btn-secondary">Sign Up</a>

<ul class="post-list">
    {{#each posts as |post|}}
    <li>
        {{> post-info post }}
    </li>
    {{/each}}
</ul>

<p class="signup-message">Don't have an account? <a href="/signup">Sign up</a></p>

<script src="/js/login.js"></script>
